<UserControl x:Class="ICResponse.Pages.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI" 
             >
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/SettingsContent/About.xaml">
            <mui:ModernTab.Links>                
                <mui:Link DisplayName="about" Source="/SettingsContent/About.xaml"/>
                <mui:Link DisplayName="appearance" Source="/SettingsContent/Appearance.xaml"/>
                <mui:Link DisplayName="password change" Source="/SettingsContent/ChangePassword.xaml"/>
                <mui:Link DisplayName="version" Source="/SettingsContent/VersionDisplay.xaml"/>
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
