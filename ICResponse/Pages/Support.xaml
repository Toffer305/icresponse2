<UserControl x:Class="ICResponse.Pages.Support"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             >
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/SupportContent/AddCallConfirmation.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="add call" Source="/SupportContent/AddCallConfirmation.xaml" />
                <mui:Link DisplayName="my calls" Source="/SupportContent/MyCalls.xaml" />
                <mui:Link DisplayName="today's calls" Source="/SupportContent/TodaysCalls.xaml" />
                <mui:Link DisplayName="search/export calls" Source="/SupportContent/SearchAllCalls.xaml" />
                <mui:Link DisplayName="voicemails" Source="/SupportContent/Voicemails.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
        
    </Grid>
</UserControl>
